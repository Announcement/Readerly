{
  "background": {
    "scripts": [
      "distribution/background.js"
    ]
  },
  "browser_action": {
    "name": "Readerly 2",
    "default_icon": "distribution/icon128.png",
    "default_title": "Readerly"
  },
  "content_scripts": [
    {
      "css": [
        "distribution/lib/readerly-main.css",
        "distribution/lib/playback/readerly-playback.css",
        "distribution/lib/settings/settings.css",
        "distribution/lib/settings/noUi.css"
      ],
      "js": [
        "distribution/bundle.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "32": "distribution/icon32.png",
    "64": "distribution/icon64.png",
    "128": "distribution/icon128.png"
  },
  "manifest_version": 2,
  "name": "Readerly 2",
  "commands": {
    "read_selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Read Selection"
    },
    "graphical_selection": {
      "suggested_key": {
        "default": "Ctrl+X"
      },
      "description": "Graphical Selection"
    },
    "halve_speed": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Halve reader speed"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "MacCtrl+Z"
      }
    }
  },
  "offline_enabled": true,
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "<all_urls>",
    "unlimitedStorage"
  ],
  "short_name": "Readerly2",
  "version": "0.1.32",
  "web_accessible_resources": [
    "distribution/fonts/*",
    "distribution/images/*"
    "distribution/lib/*"
    "distribution/*"
  ],
  "applications": {
    "gecko": {
      "id": "readerlydeveloper@readerly.xyz",
      "strict_min_version": "47"
    }
  }
}
